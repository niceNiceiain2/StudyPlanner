<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application dark theme (Twitter style) -->
    <style name="Theme.StudyPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Backgrounds -->
        <item name="android:colorBackground">#15202B</item> <!-- Main background -->
        <item name="colorSurface">#192734</item> <!-- Card/Panel backgrounds -->

        <!-- Primary color and text/icons -->
        <item name="colorPrimary">#1DA1F2</item> <!-- Twitter blue -->
        <item name="colorPrimaryVariant">#1A91DA</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#8899A6</item> <!-- Muted gray for accents -->
        <item name="colorSecondaryVariant">#AAB8C2</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Text on dark background -->
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your dark theme here -->
    </style>

</resources>
